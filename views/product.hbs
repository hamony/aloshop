{{#with product}}
<div class="container mt-5">
    <div class="row">
        <div class="col-lg-6">
            <img class="img-fluid" src="/img/products/{{image_path}}" alt="{{name}}">
        </div>
        <div class="col-lg-5 offset-lg-1">
            <div class="s_product_text">
                <h3>{{name}}</h3>
                {{#if old_price}}
                    <h2 class="oldprice">&#163;{{old_price}}</h2>
                {{/if}}
                <h2>&#163;{{price}}</h2>
                <ul class="list">
                    <li><span>Category</span> : {{category}}</li>
                    <li><span>Availibility</span> : {{#if available}}In Stock{{else}}Out of Stock{{/if}}</li>
                </ul>
                <div class="product_count">
                    <label for="product_quantity">Quantity: </label>
                    <input type="number" size="2" maxlength="12" value="1" name="quantity" id="product_quantity" readonly>
                    <button type="button" class="increase" onclick="var result = document.getElementById('product_quantity'); var sst = result.value; if( !isNaN( sst )) result.value++; return false;">
                        <i class="fas fa-chevron-up"></i>
                    </button>
                    <button type="button" class="reduced" onclick="var result = document.getElementById('product_quantity'); var sst = result.value; if( !isNaN( sst ) && sst > 1) result.value--;return false;">
                        <i class="fas fa-chevron-down"></i>
                    </button>                    
                </div>
                {{#if available}}
                <a class="button primary-btn add-to-cart ml-2" href="javascript:void(0)" data-id="{{id}}">Add to Cart</a>
                {{/if}}
            </div>
        </div>
    </div>
</div>
{{/with}}